{
    "manifest_version": 3,
    "name": "Clash of Code Private Replay",
    "description": "Adds a button to restart private games of Clash of Code (codingame.com).",
    "version": "1.0",
    "background": {
        "service_worker": "assets/js/background.js"
    },
    "icons": {
        "16": "assets/images/icon-16.png",
        "32": "assets/images/icon-32.png",
        "48": "assets/images/icon-48.png",
        "128": "assets/images/icon-128.png"
    },
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://www.codingame.com/clashofcode/clash/report/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{f2913b5f-5924-498f-bd0f-7f1070f64d57}"
        }
    }
}